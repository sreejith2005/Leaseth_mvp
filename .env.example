DEBUG=True

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_TITLE=Leaseth AI Scoring API
API_VERSION=1.0.0

# Database
DATABASE_URL=sqlite:///./leaseth.db
# For PostgreSQL: postgresql://user:password@localhost:5432/leaseth

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
